{
  "name": "fastify-clerk-drizzle-server",
  "version": "1.0.0",
  "type": "module",
  "description": "A Fastify server with Clerk Auth and Drizzle ORM",
  "main": "dist/server.js",
  "scripts": {
    "dev": "npm run format && NODE_OPTIONS='--loader ts-node/esm' nodemon --ignore 'src/uploads' src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "build:prod": "npm run build && tsup && node scripts/postbuild.mjs",
    "start:prod": "node dist-prod/server.mjs",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "organize-imports": "organize-imports-cli 'src/**/*.ts'"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/static": "^8.2.0",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "drizzle-orm": "^0.44.5",
    "fastify": "^5.6.1",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "dotenv": "^17.2.2",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "author": "W.K.D.Kavishka",
  "license": "MIT"
}
