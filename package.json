{
	"name": "fastify-clerk-drizzle-bun-server",
	"version": "1.0.0",
	"type": "module",
	"description": "A Fastify server with Clerk Auth and Drizzle ORM, optimized for Bun",
	"main": "dist/server.js",
	"scripts": {
		"dev": "bun run format  && bun --watch src/server.ts",
		"start": "bun dist/server.js",
		"build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
		"build:prod": "bun run build && tsup && bun scripts/postbuild.mjs",
		"db:generate": "bunx drizzle-kit generate:pg",
		"db:push": "bunx drizzle-kit push:pg",
		"db:studio": "bunx drizzle-kit studio",
		"format": "bunx biome check --write",
		"sync-mcp": "bun scripts/sync-mcp-config.ts"
	},
	"dependencies": {
		"@clerk/fastify": "^2.4.39",
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.1.0",
		"@fastify/formbody": "^8.0.2",
		"@fastify/helmet": "^13.0.2",
		"@fastify/multipart": "^9.2.1",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/sensible": "^6.0.3",
		"@fastify/static": "^8.2.0",
		"@fastify/swagger": "^9.5.2",
		"@fastify/swagger-ui": "^5.2.3",
		"@fastify/type-provider-json-schema-to-ts": "^5.0.0",
		"ajv-errors": "^3.0.0",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.6",
		"fastify": "^5.6.1",
		"install": "^0.13.0",
		"node-cron": "^4.2.1",
		"pino-pretty": "^13.1.2",
		"postgres": "^3.4.7",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@clerk/types": "^4.94.0",
		"@types/bun": "^1.3.0",
		"@types/node-cron": "^3.0.11",
		"drizzle-kit": "^0.31.5",
		"tsc-alias": "^1.8.16",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"author": "W.K.D.Kavishka",
	"license": "MIT"
}
